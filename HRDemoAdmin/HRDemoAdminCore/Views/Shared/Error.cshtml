@model Newtonsoft.Json.Linq.JObject

@{ 
    string errorResponse = System.Diagnostics.Debugger.IsAttached ? Newtonsoft.Json.JsonConvert.SerializeObject(Model) : "";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Error</title>
</head>
<body>
    <hgroup>
        <h1>Error.</h1>
        <h2>An error occurred while processing your request.</h2>
    </hgroup>
    @if (!string.IsNullOrEmpty(errorResponse))
    {
        <hr />
        <pre style="white-space: pre-wrap;">@errorResponse</pre>
    }
</body>
</html>
