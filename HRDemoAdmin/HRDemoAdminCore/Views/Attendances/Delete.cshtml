@model HRDemoAdmin.Services.Models.AttendanceResponse

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Attendance #@Model.AttendanceID</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Employee</dt>

        <dd>
            <a href="/Employees/Details/@Model.Employee.EmployeeID">
                @Html.DisplayFor(model => model.Employee.FirstName)
                <span> </span>
                @Html.DisplayFor(model => model.Employee.LastName) (@Html.DisplayFor(model => model.Employee.Email))
            </a>
        </dd>


        <dt>
            @Html.DisplayNameFor(model => model.Status)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Status)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Date)
        </dt>

        <dd>
            @Model.Date.ToString("M/d/yyyy")
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CheckInTime)
        </dt>

        <dd>
            @Model.CheckInTime.ToString("h:mm tt")
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CheckOutTime)
        </dt>

        <dd>
            @Model.CheckOutTime.ToString("h:mm tt")
        </dd>
    </dl>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
