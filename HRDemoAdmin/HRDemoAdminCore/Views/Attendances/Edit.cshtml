@model HRDemoAdmin.Services.Models.AttendanceResponse

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Edit Attendance #@Model.AttendanceID</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group col-md-6">
            @Html.LabelFor(model => model.Employee, htmlAttributes: new { @class = "control-label" })
            <p>
                @Html.DisplayFor(model => model.Employee.FirstName)
                <span> </span>
                @Html.DisplayFor(model => model.Employee.LastName) (@Html.DisplayFor(model => model.Employee.Email))
            </p>
        </div>

        <div class="form-group col-md-6">
            @Html.LabelFor(model => model.Date, htmlAttributes: new { @class = "control-label" })
            <div>
                @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row g-2 mb-2">
            <div class="form-group col-md-3">
                @Html.LabelFor(model => model.CheckInTime, htmlAttributes: new { @class = "control-label" })
                <div>
                    @Html.EditorFor(model => model.CheckInTime, new { htmlAttributes = new { @class = "form-control", @type = "time" } })
                    @Html.ValidationMessageFor(model => model.CheckInTime, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group col-md-3">
                @Html.LabelFor(model => model.CheckOutTime, htmlAttributes: new { @class = "control-label" })
                <div>
                    @Html.EditorFor(model => model.CheckOutTime, new { htmlAttributes = new { @class = "form-control", @type = "time" } })
                    @Html.ValidationMessageFor(model => model.CheckOutTime, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group mt-2">
            <div class="col-md-offset-2">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div class="mt-2">
    @Html.ActionLink("Back to List", "Index")
</div>
